  "version": "0.2.0",
  "configurations": [{
      "name": "Docker: Attach to Node",
      "type": "node",
      "request": "attach",
      "port": 7000,
      "address": "localhost",
      "localRoot": "${workspaceRoot}/src/service",
      "remoteRoot": "/app",
      "protocol": "inspector"
    },
    {
      "name": "React",
      "type": "chrome",
      "request": "launch",
      "url": "http://0.0.0.0:3001",
      "webRoot": "${workspaceRoot}/src/web"
    }
  ]
}